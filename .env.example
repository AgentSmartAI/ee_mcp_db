# Application Configuration
SERVICE_NAME=ee-postgres
APP_DISPLAY_NAME=EE PostgreSQL MCP Server
APP_VERSION=auto  # Set to 'auto' to read from package.json

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=postgres
DB_SCHEMA=documents
DB_SSL=false

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=5000

# Server Configuration
MCP_PORT=8102
SERVER_KEEPALIVE_INTERVAL=30000
SERVER_REQUEST_TIMEOUT=30000
SERVER_MAX_REQUEST_SIZE=10mb

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIRECTORY=./logs
LOG_MAX_FILES=7
LOG_MAX_SIZE=20m

# Remote Logging Database (Optional)
LOG_DB_ENABLED=false
LOG_DB_HOST=localhost
LOG_DB_PORT=5432
LOG_DB_USER=postgres
LOG_DB_PASSWORD=your_password
LOG_DB_NAME=postgres
LOG_DB_SCHEMA=logs
LOG_DB_TABLE=logs.service_logs
LOG_DB_SSL=false
LOG_DB_BATCH_SIZE=100
LOG_DB_FLUSH_INTERVAL_MS=5000
LOG_DB_MAX_BUFFER_SIZE=1000
LOG_DB_RETRY_ATTEMPTS=3
LOG_DB_RETRY_DELAY_MS=1000
LOG_DB_CIRCUIT_FAILURE_THRESHOLD=5
LOG_DB_CIRCUIT_RESET_TIMEOUT_MS=60000

# Feature Flags
FEATURE_EVENTS_ENABLED=false
FEATURE_EVENTS_PROCESSORS=
FEATURE_EVENTS_BUFFER_SIZE=10000

FEATURE_RESOURCES_ENABLED=false
FEATURE_RESOURCES_CACHE_ENABLED=true
FEATURE_RESOURCES_CACHE_TTL=300

FEATURE_PROMPTS_ENABLED=false
FEATURE_PROMPTS_PATH=

FEATURE_OPTIMIZATION_ENABLED=false
FEATURE_OPTIMIZATION_AUTO=false
FEATURE_OPTIMIZATION_LEARNING=false

# Query Configuration
ENABLE_WRITE_OPERATIONS=false
ENABLE_MANAGED_TABLES=false
MAX_QUERY_SIZE=1000000
MAX_RESULT_ROWS=10000
QUERY_TIMEOUT_MS=30000

# Development Configuration
NODE_ENV=development
USE_CONFIG_JSON=false  # Set to true to use config.json as fallback